<div class="box">
    <div class="is-flex is-justify-content-space-between is-align-items-center">
        <div>Created by
            {{item.createdBy.name}}
            {{item.createdAt | ago}}</div>
        <div class="is-size-5">
            {{item.title}}
            <a hx-get="{{ path('opportunity.product.edit', {'id': item.id}) }}" hx-target="#opportunity-item-form">
                <span class="iconify" data-icon="mdi:pencil" data-inline="false"></span>
            </a>
        </div>
    </div>
    <p class="is-size-6 my-3">Interest recorded for
        <strong>{{item.product.name}}</strong>
        with current status as
        <strong>{{ item.status }}</strong>
    </p>
    <div class="content">
        {{item.remarks}}
    </div>
    {% if item.appointmentAt %}
        <div class="content has-text-link">
            Appointment scheduled for
            {{item.appointmentAt | date('d M, Y h:i a') }}
        </div>
    {% endif %}

    <div class="is-flex is-justify-content-space-between is-align-items-center">
        <div class="is-size-6">
            {% if item.callbackAt %}
                Follow up on
                {{item.callbackAt|date('d M, Y h:i a')}}
            {% endif %}
        </div>

        {% if item.updatedBy is not null %}
            <div class="is-size-7">Last Updated
                {{item.updatedAt | ago}}
                by
                {{item.updatedBy.name}}</div>
        {% endif %}
    </div>
</div>
