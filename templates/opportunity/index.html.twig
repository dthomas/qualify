{% extends 'base.html.twig' %}

{% block title %}Opportunities
{% endblock %}

{% block breadcrumb %}
    <nav class="breadcrumb" aria-label="breadcrumbs">
        <ul>
            <li><a href="{{path('home')}}">Home</a></li>
            <li><a class="is-active"href="{{ path('opportunity.list') }}">Opportunities</a></li>
        </ul>
    </nav>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-content">
            <p class="card-header">
                <div class="is-flex is-justify-content-space-between is-align-items-center">
                    <p class="title is-5 my-0">Opportunities</p>
                    <div class="actions">
                        <a class="button is-link is-small is-rounded" href="{{ path('opportunity.new') }}">Add</a>
                    </div>
                </div>
            </p>
        </div>
        <div class="card-content">
            {% include "opportunity/_opportunities.html.twig" with { 'opportunities': opportunities } %}
            <div class="pages">
                {% include "shared/_pagination.html.twig" with { 'route': 'opportunity.list' } %}
            </div>
        </div>
    </div>
{% endblock %}
