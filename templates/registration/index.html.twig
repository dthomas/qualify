{% extends 'base.html.twig' %}

{% block title %}New Account{% endblock %}

{% block body %}
    <div class="columns my-3">
        <div class="column is-two-third">
            <img src="{{ asset('build/images/login.svg') }}" alt="Register Image">
        </div>
        <div class="column is-one-third">
            <div class="cards">
                <div class="card-content">
                    {{ form_start(form) }}
                        <div class="content">
                            {% include "registration/_form.html.twig" %}
                        </div>

                        <footer>
                            <div class="field is-grouped">
                                <div class="control">
                                    <button class="button is-small is-link is-rounded" type="submit">Register</button>
                                </div>
                                <div class="control">
                                    <a class="button is-link is-small is-light is-rounded" href="{{ path('app_login') }}">Login</a>
                                </div>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
                </div>
        </div>
    </div>
{% endblock %}
