    <h1>LeadStatus</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lead_stage.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ lead_stage.code }}</td>
